        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "ÔÅ≥ {:%a %d.%m.  ÔÄó %H:%M:%S}",
        "format-alt": "{:%Y-%m-%d}",
        "interval": 1
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        //"format": "{volume}% {icon} {format_source}",
        "format": "{icon} {volume}%",

        // "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî",

        // "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "MUTED {icon}Ôäî",

        "format-muted": "MUTED {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Û∞ãé ",
            "headset": "Óπô ",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pavucontrol"
    },
    // https://git.sr.ht/%7Ekrathalan/waybar-modules
    "custom/vpn": {
        "interval": 10,
        "tooltip": false,
        "format": "{}",
        "return-type":
           {{- if eq .chezmoi.hostname "ax-fuji" -}} "json"
           {{- else -}} "json"
           {{- end }},
        "exec":
           {{- if eq .chezmoi.hostname "ax-mac" -}} "$HOME/.cargo/bin/tlbx waybar vpn"
           {{- else if eq .chezmoi.hostname "ax-bee" -}} "$HOME/.cargo/bin/tlbx waybar vpn"
           {{- else if eq .chezmoi.hostname "ax-fuji" -}} "$HOME/scripts/legacy-xorg-dwm/i3vpn.clj"
           {{- else -}} "echo 'TODO config custom/vpn'"
           {{- end }}
    },
    "custom/licht": {
        "interval": 10,
        "tooltip": false,
        "format": "{}",
        "return-type": "text",
        "exec": "$HOME/.cargo/bin/tlbx waybar licht"
    },
    "custom/disk": {
        "interval": 10,
        "tooltip": false,
        "format": "{}",
        "return-type": "json",
        "exec": "$HOME/.cargo/bin/tlbx waybar disk"
    },
    "custom/memory": {
        "interval": 10,
        "tooltip": false,
        "format": "{}",
        "return-type": "json",
        "exec": "$HOME/.cargo/bin/tlbx waybar memory"
    },
    "custom/weather": {
        "interval": 600,
        "tooltip": false,
        "on-click": "~/scripts/bb/weather.clj dunst",
        "format": "{}",
        "return-type": "text",
        "exec": "$HOME/scripts/bb/weather.clj dwm"
    },
    "custom/music-info": {
        "interval": 1,
        "tooltip": false,
        "on-click": "playerctl play-pause",
        "format": "[{}]",
        "return-type": "text",
        "exec": "$HOME/.cargo/bin/tlbx waybar music"
    },
    "custom/sep1": {
        "format": " | ",
        "tooltip": false
    },
    "custom/sep2": {
        "format": "‚Ä¢",
        "tooltip": false
    },
        "sway/mode": {
        "format": "{}",
        "max-length": 100
    },
    "sway/window": {
        "format": "{title}",
        "icon": true,
        "icon-size": 20,
//        "max-length": 50,
