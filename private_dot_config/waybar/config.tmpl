// -*- mode: jsonc -*-

{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 10, // Gaps between modules [px]

    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/window",
    ],
    "modules-center": [
        "clock",
        "custom/weather",
    ],
    "modules-right": [
        "custom/music-info",
        "custom/sep2",
        "pulseaudio",
        "custom/sep2",
        "custom/licht",
        "custom/sep2",
        "cpu",
        "custom/sep2",
        "custom/disk",
        "custom/memory",
        "battery",
        "battery#bat2",
        "custom/sep2",
        "custom/vpn",
        "custom/sep2",
        "tray"
    ],

