* {
    border: none;
    border-radius: 0;
    font-family: HackNerdFont;
    font-size: 11px;
    min-height: 0;
}

window#waybar {
    background: rgba(0, 0, 0, 1);
    border-bottom: 0px solid rgba(100, 114, 125, 0.5);
    color: #195466;
}

tooltip {
  background: rgba(43, 48, 59, 0.5);
  border: 1px solid rgba(100, 114, 125, 0.5);
}
tooltip label {
  color: white;
}

#workspaces button {
    padding: 0 5px;
    background: transparent;
    color: #d3ebe9;
    border-bottom: 3px solid transparent;
}

#workspaces button.focused {
    background: #64727D;
    border-bottom: 3px solid #33859e;
}

#workspaces button.active {
    background-color: #245361;
    color: #d3ebe9;
    border-radius: 3px;
}

#mode, #clock, #battery {
    padding: 0 10px;
}

#mode {
    background: red;
    border-bottom: 3px solid red;
}

#clock {
    color: {{- if eq .chezmoi.hostname "ax-mac" -}} #b48ead
           {{- else if eq .chezmoi.hostname "ax-bee" -}} #d08770
           {{- else if eq .chezmoi.hostname "ax-fuji" -}} #ebcb8b
           {{- else -}} #edb443
           {{- end }};
}

#battery {
    color: red;
}

#battery.charging {
    color: red;
    background-color: #26A65B;
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: black;
    }
}

#battery.warning:not(.charging) {
    background: #f53c3c;
    color: red;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: steps(12);
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

#cpu {
    color: #195466;
}

